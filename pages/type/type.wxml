<view style='display: flex;width: 100%;height:100%;'>
  <view  style='width:25%;height:1000rpx;'>
    <view class="{{nav_select==index ? 'oneactive' : 'one'}}" data-nav_select1='{{index}}' wx:for="{{type}}" wx:key="id" bindtap='switch_nav'>
    {{item}}
    </view>
  </view>
  <view wx:if="{{nav_select==0}}" class='two'>
  0种类1
