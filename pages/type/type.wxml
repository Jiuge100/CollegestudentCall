<!--pages/type/type.wxml-->
<view style='width: 100%;height: 104rpx;display: flex;align-items:center;justify-content: center;background:#87CEEB;position:fixed;top:0;'>
    <view style='align-items:center;display: flex;margin: auto; width: 92%;height:60%;border-radius:10rpx;background: #fff;' bindtap='search'>
        <image style=' width: 43rpx;height: 43rpx;margin-left:20rpx;' src='../../image/search.png'></image>
        <view style='margin-left:20rpx;font-size: 32rpx;'>请输入...</view>
    </view>
</view>

<view style='display: flex;width: 100%;height:100%;margin-top:124rpx;'>
  <scroll-view style='width:25%;position:absolute;left:0;height:100%' scroll-y="true">
    <view style='font-size:32rpx' class="{{nav_select==index ? 'oneactive' : 'one'}}" data-nav_select1='{{index}}' wx:for="{{type}}" wx:key="id" bindtap='switch_nav'>
    {{item}}
    </view>
  </scroll-view>

<view style='position:absolute;right:0;height:100%;width:75%;'>
  <view  class='two'>{{nav_select}}</view>
  <scroll-view style='height:100%;'  scroll-y="true">
    <view wx:for="{{[1, 2, 3,4,5,6,7,8,9]}}" wx:key="">
        <view style='display: flex;width: 100%;height:180rpx;background:red;display: flex;align-items:center;justify-content: center;'>
         <view style='display: flex;width: 95%;height:90%;background:green;'></view>
        </view>
    </view>
  </scroll-view>
  </view>
</view>
