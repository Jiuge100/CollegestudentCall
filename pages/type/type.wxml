  1种类2
  </view>
  <view wx:if="{{nav_select==2}}" class='two'>
  2种类3
  </view>
  <view wx:if="{{nav_select==3}}" class='two'>
  3种类4
  </view>
  <view wx:if="{{nav_select==4}}" class='two'>
  4种类5
  </view>
  <view wx:if="{{nav_select==5}}" class='two'>
  5种类6
  </view>
  <view wx:if="{{nav_select==6}}" class='two'>
  6种类7
  </view>
  <view wx:if="{{nav_select==7}}" class='two'>
  7种类8
  </view>
  
</view>
